<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jinbiduihuancolor"
    android:orientation="vertical"
    tools:context=".module.guoguoDou.JinBiDuihuanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/jinbiduihuantop"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/guoguodouduihuan"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@mipmap/jinbiduihuantopceng"
            android:paddingBottom="20dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:paddingTop="30dp"
            app:columnCount="2"
            app:rowCount="2">

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/jinbiduihuanitem"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
                    android:id="@+id/oneGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0金币"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/oneDou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0颗果果豆"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="120dp"
                android:layout_height="40dp"

                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/jinbiduihuanitem"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
                    android:id="@+id/twoGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0金币"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/twoDou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0颗果果豆"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/jinbiduihuanitem"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
