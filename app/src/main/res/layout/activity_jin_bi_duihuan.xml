                    android:text="0金币"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/threeDouV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0颗果果豆"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourV"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/jinbiduihuanitem"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
                    android:id="@+id/fourGoldV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0金币"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/fourDouV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0颗果果豆"
                    android:textColor="@color/gwe"
                    android:textSize="10sp" />
            </LinearLayout>


        </android.support.v7.widget.GridLayout>


        <TextView
            android:id="@+id/getVip"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/jinbiduihuanbtn"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="8dp"
            android:text="@string/getvip"
            android:textColor="@color/gwe"
            android:textSize="17sp" />
    </LinearLayout>

    <com.test720.grasshoppercollege.myViews.TanXianGuankaView
        android:id="@+id/feivipYun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        auto:src="@color/touming" />

    <com.test720.grasshoppercollege.myViews.TanXianGuankaView
        android:id="@+id/vipYun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        auto:src="@color/touming" />

    <include layout="@layout/back_fan_hui_three" />
</RelativeLayout>