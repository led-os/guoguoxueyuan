<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:paddingTop="20dp"
    tools:context="com.test720.grasshoppercollege.module.jinShai.JinSaiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/onePic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/pic_head_default"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/oneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/jishi"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/twoPic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/pic_head_default"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/twoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="330dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/myFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <ProgressBar
                android:id="@+id/my"
                android:layout_width="30dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:indeterminateOnly="false"
                android:max="10"
                android:progress="0"
                android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/jindutiao" />
        </RelativeLayout>


        <com.test720.grasshoppercollege.myViews.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="330dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/duiFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <ProgressBar
                android:id="@+id/duiShou"
                android:layout_width="30dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:indeterminateOnly="false"
                android:max="0"
                android:progress="0"
                android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/jindutiao" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@mipmap/fanhui" />
</RelativeLayout>
