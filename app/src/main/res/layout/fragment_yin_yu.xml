                        android:textColor="@color/gwe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/six"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
