<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/doudoushangchengback"
    android:orientation="vertical"
    tools:context=".module.guoguoDou.GuoGuoDouShouActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/appColor"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/guoguodou"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/doudou"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@mipmap/doudoushangchengtop"
            android:gravity="center_vertical|end"
            android:paddingEnd="40dp"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="@color/appColor"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guiZe"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/appColor"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/shangCheng"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/appColor"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/jinbi"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>