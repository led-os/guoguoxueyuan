<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/beijpic" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="34dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/meikaigk"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/suohuang" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/relativeLayout4"
        android:layout_toRightOf="@+id/relativeLayout4">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/meikaigk"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/suohuang" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/meikaigk"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/suohuang" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_marginTop="72dp"
        android:layout_toEndOf="@+id/relativeLayout4"
        android:layout_toRightOf="@+id/relativeLayout4">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/meikaigk"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/suohuang" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout7"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/relativeLayout6"
        android:layout_toStartOf="@+id/relativeLayout6">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/meikaigk"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/suohuang" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/relativeLayout7"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/relativeLayout7">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/anniu1"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="day.1"
            android:textSize="12dp" />
    </RelativeLayout>


</RelativeLayout>
