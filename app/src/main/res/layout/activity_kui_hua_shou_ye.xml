<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.test720.grasshoppercollege.module.yuWen.chengYu.kuiHua.KuiHuaShouYeActivity">


    <com.test720.grasshoppercollege.myViews.BitmapScrollPicker
        android:id="@+id/bitSc"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:background="@color/touming"
        app:spv_center_item_background="@color/touming"
        app:spv_disallow_intercept_touch="true"
        app:spv_draw_bitmap_height="120dp"
        app:spv_draw_bitmap_mode="size"
        app:spv_draw_bitmap_width="200dp"
        app:spv_is_circulation="true"
        app:spv_max_scale="1.3"
        app:spv_min_scale="0.8"
        app:spv_orientation="horizontal"
        app:spv_visible_item_count="3" />

    <com.test720.grasshoppercollege.myViews.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dibu" />
</LinearLayout>
