<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/fanhui" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoxi"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/bule_back_kuang_"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tongzhi"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/white_back_"
                android:gravity="center"
                android:text="通知"
                android:textColor="@color/appColor"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

    <com.test720.grasshoppercollege.myViews.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/light_divider_color"
        android:padding="10dp" />
</LinearLayout>
