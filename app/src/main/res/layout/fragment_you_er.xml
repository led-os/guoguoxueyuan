                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:text="国学经典"
                        android:textColor="@color/gwe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tweven"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/yebbtt" />

                    <TextView
                        android:id="@+id/text_tweven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:text="宝宝听听"
                        android:textColor="@color/gwe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirth"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/yeegsj" />

                    <TextView
                        android:id="@+id/text_thirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:text="儿歌世界"
                        android:textColor="@color/gwe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourth"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/yeyzyx" />

                    <TextView
                        android:id="@+id/text_fourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2.5dp"
                        android:layout_marginTop="2.5dp"
                        android:text="益智游戏"
                        android:textColor="@color/gwe" />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</RelativeLayout>
